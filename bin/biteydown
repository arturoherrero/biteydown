#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.dirname(__FILE__)) + '/../lib/')

require 'optparse'
require 'biteydown'

options = {}
opts = OptionParser.new do |opts|
  opts.program_name = File.basename($0)
  opts.banner = "Usage: #{opts.program_name} [options] file"

  opts.on("--html", "Create HTML file") do
    options[:html] = true
  end

  opts.on("--pdf", "Create PDF file") do
    options[:pdf] = true
  end

  opts.on( '-c', '--css FILE', "Path to CSS file" ) do |c|
    options[:css] = c
  end

  opts.on('-h', '--help', 'Display help') do
    puts opts
    exit
  end
end

begin
  opts.parse! ARGV
rescue => exception
  puts exception
  puts opts
  exit 1
end

markdown_path = ARGV.first

if markdown_path && File.exists?(markdown_path)
  Biteydown.process(markdown_path, options[:html], options[:pdf], options[:css])
else
  puts opts
  exit 1
end
